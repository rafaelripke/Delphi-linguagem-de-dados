program exercicio7;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  A, B, C: Integer;
begin
  Write('Digite o valor de A: ');
  ReadLn(A);

  Write('Digite o valor de B: ');
  ReadLn(B);

  Write('Digite o valor de C: ');
  ReadLn(C);

  WriteLn('%f.1 + %f.2 + %f.3 = ', A + B + C);
  WriteLn('A - B + C = ', A - B + C);
  WriteLn('A - (B + C) = ', A - (B + C));
  WriteLn('(A * 2) + (B - C) = ', (A * 2) + (B - C));
  WriteLn('(A * 4) + (C / 2) - (B + 8) = ', (A * 4) + (C div 2) - (B + 8));
  WriteLn('(A / 2) + (B / 2) + (C / 2) = ', (A div 2) + (B div 2) + (C div 2));
  WriteLn('A² + B² = ', (A * A) + (B * B));
  WriteLn('C² + 3 * B = ', (C * C) + (3 * B));
  WriteLn('A MOD 2 = ', A mod 2);
  WriteLn('B MOD 2 = ', B mod 2);
  WriteLn('C MOD 2 = ', C mod 2);
  ReadLn;
end.
